{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "pretty": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["vitest/globals", "vite/client"]
    //    "skipLibCheck": true,
    // "typeRoots": ["definitions", "node_modules/@types"]
  },
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
}
