{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["theme/themes/themeOverride.d.ts"],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "theme",
    "components",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js"
  ]
}
